<div class="hero main-hero">
    <div class="wrapper">
        <div class="image">
            <img src="images/hero.png">
        </div>
        <div class="content">
            <div class="text">
                <h2 class="wow animate__backInRight">
                    {{ section.settings.hero_headline }}
                <!--Feed <span class="green">your dog</span><br>
                    like family-->
                </h2>
                <p>Excitement, Joy, Love. That’s what makes Fetch’s fresh, chef-baked dog food a must-have in your pup’s bowl, giving them a longer, healthier life in every bite.</p>
                <p><a href="#" class="button">shop now</a></p>
            </div>
        </div>
    </div>
</div>


{% schema %}
{
  "name": "hero-banner",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "t:sections.hero-banner.settings.image.label"
    },
    {
      "type": "select",
      "id": "bg_color",
      "options": [
        {
          "value": "small",
          "label": "t:sections.hero-banner.settings.image_height.options__1.label"
        },
        {
          "value": "medium",
          "label": "t:sections.hero-banner.settings.image_height.options__2.label"
        },
        {
          "value": "large",
          "label": "t:sections.hero-banner.settings.image_height.options__3.label"
        }
